@page "/ftdi"
@rendermode InteractiveServer

<PageTitle>FTDI</PageTitle>

<h1>
    <span class="bi bi-usb-drive" aria-hidden="true"></span> FTDI
</h1>

<p>This page is for FTDI device interaction.</p>

<button class="btn btn-success" @onclick="OnFtdiButtonClick">
    <span class="bi bi-lightning-charge-fill" aria-hidden="true"></span> Execute FTDI Action
</button>

@if (!string.IsNullOrEmpty(message))
{
    <div class="alert alert-info mt-3">@message</div>
}

@code {
    private string? message;

    private async Task OnFtdiButtonClick()
    {
        // Simulate async work (optional)
        await Task.Yield();
        message = $"FTDI action executed at {DateTime.Now:T}";
    }
}